# AI Drive-Thru Demo Application - Environment Variables

# Application Settings
APP_NAME="AI Drive-Thru Demo"
APP_VERSION="1.0.0"
ENVIRONMENT="development"
DEBUG=true
LOG_LEVEL="INFO"

# Server Settings
HOST="0.0.0.0"
PORT=8000
WORKERS=4

# Database Settings
DATABASE_URL="postgresql://user:password@localhost:5432/drivethru"
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Redis Cache Settings
REDIS_HOST="localhost"
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=""
CACHE_TTL=3600

# Model Paths
MODELS_CACHE_DIR="./models_cache"
STT_MODEL_PATH="faster-whisper-base"
TTS_MODEL_PATH="tts_models/multilingual/multi-dataset/xtts_v2"
LLM_MODEL_PATH="./models_cache/llama-3.1-8b-instruct-q4_0.gguf"

# Model Settings
STT_DEVICE="cpu"  # cpu or cuda
STT_COMPUTE_TYPE="int8"
TTS_USE_GPU=false
LLM_N_CTX=4096
LLM_N_THREADS=8

# Voice Settings
STT_LATENCY_TARGET=500  # milliseconds
TTS_LATENCY_TARGET=1000  # milliseconds
INTERRUPTION_DETECTION_MS=200

# Language Settings
DEFAULT_LANGUAGE="ar"
SUPPORTED_LANGUAGES="ar,en"
LANGUAGE_DETECTION_THRESHOLD=0.8
CODE_SWITCHING_ENABLED=true

# Branch Settings
DEFAULT_BRANCH_ID=1
MULTI_BRANCH_ENABLED=true

# File Upload
MAX_UPLOAD_SIZE=10485760  # 10MB
ALLOWED_AUDIO_FORMATS="wav,mp3,ogg"

# Security
SECRET_KEY="your-secret-key-here-change-in-production"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Settings
CORS_ORIGINS="http://localhost:3000,http://localhost:8000"
CORS_ALLOW_CREDENTIALS=true

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Feature Flags
ENABLE_VOICE_INTERRUPTION=true
ENABLE_KEYWORD_MATCHING=true
ENABLE_TTS_CACHING=true
ENABLE_HOT_RELOAD=true
